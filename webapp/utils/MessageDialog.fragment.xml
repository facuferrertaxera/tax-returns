<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
	<Dialog title="Errors" contentWidth="500px" contentHeight="300px" verticalScrolling="false">
		<beginButton>
			<Button text="Close" press="onMessageDialogClose"/>
		</beginButton>
		<content>
			<MessageView items="{messages>/}" >
				<items>
					<MessageItem type="{messages>type}" title="{messages>message}" description="{messages>description}"/>
				</items>
			</MessageView>
		</content>
	</Dialog>
</core:FragmentDefinition>